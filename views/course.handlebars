  <aside class="left-side-menu">
    <!-- Refers to sidebar-left-course.handlebars fail in /partials folder -->
    {{> sidebar-left.course }}
  </aside>

  <main id="main-content" class="main px-4 py-16">
 
    <!-- Refers to content.handlebars fail in /partials folder -->
    {{> content.course }}

  </main>
  <aside class="right-side-menu p-2">
   
    {{> sidebar-right.anchors }}

  </aside>
</div>