<div class="flex flex-row grow 2xl:justify-between overflow-x-hidden lg:overflow-x-clip">

    <main id="main-content" class="px-4 py-8 dashboard_content">
        {{#unless user }}
            <h3 class='mt-4 ml-4'>Logi sisse, et näha töölauda</h3>
        {{/unless }}

        {{#if user }}
            <h1>Tere, {{user.displayName}}!</h1>
            <h4>Palun vali jätkamiseks roll</h4>
            <form action="/role-select" method="post">
                <button class="btn btn-primary w-1/2 lg:w-1/4 mb-4" type="submit" name="role" value="teacher">Õppejõud
                </button>
                <button class="btn btn-primary w-1/2 lg:w-1/4" type="submit" name="role" value="student">Tudeng</button>
            </form>
        {{/if }}
    </main>
</div>
